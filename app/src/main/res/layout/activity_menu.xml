<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvReporteProductos"
        android:layout_width="108dp"
        android:layout_height="122dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/cvConsultarStockProductos"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.103">
        <ImageView
            android:id="@+id/imgReporteProductos"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/reporte" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Reporte de productos"
            />

        <Button
            android:id="@+id/btnReporteProductos"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="408dp"
        android:layout_height="98dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/primary_mass"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="138dp"
            android:layout_height="58dp"
            android:layout_gravity="center|center_horizontal"
            app:srcCompat="@drawable/mas" />

        <ImageButton
            android:id="@+id/btnImageSalir"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_mass"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_exit_to_app_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Principal"
        android:textColor="@color/secondary_mass"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        app:layout_constraintVertical_bias="0.035" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/primary_mass"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.014">
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvBuscarProductos"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view2"
        app:layout_constraintVertical_bias="0.087">
        <ImageView
            android:id="@+id/imgBuscarProductos"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/lupa" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Buscar Productos"
            />

        <Button
            android:id="@+id/btnBuscarProductos"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvConsultarStockProductos"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toEndOf="@+id/cvBuscarProductos"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.105">
        <ImageView
            android:id="@+id/imgConsultarStockProductos"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/casita" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Consultar Stock de productos"
            />

        <Button
            android:id="@+id/btnConsultarStockProductos"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegistrarNuevoProveedor"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/cvRegistrarNuevoProducto"
        app:layout_constraintTop_toBottomOf="@+id/cvModificarProveedores"
        app:layout_constraintVertical_bias="0.262">
        <ImageView
            android:id="@+id/imgRegistrarNuevoProveedor"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/nuevo_proveedor" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Registrar un Nuevo Proveedor"
            />

        <Button
            android:id="@+id/btnRegistrarNuevoProveedor"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegistrarNuevoProducto"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toEndOf="@+id/cvRegistrarNuevoUsuario"
        app:layout_constraintTop_toBottomOf="@+id/cvModificarProductos"
        app:layout_constraintVertical_bias="0.262">
        <ImageView
            android:id="@+id/imgRegistrarNuevoProducto"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/nuevo_producto" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Registrar un Nuevo producto"
            />

        <Button
            android:id="@+id/btnRegistrarNuevoProducto"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRegistrarNuevoUsuario"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvActualizarStockProductos"
        app:layout_constraintVertical_bias="0.262">
        <ImageView
            android:id="@+id/imgRegistrarNuevoUsuario"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/nuevo_usuario" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Registrar un Nuevo Usuario"
            />
        <Button
            android:id="@+id/btnRegistrarNuevoUsuario"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvModificarProveedores"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/cvModificarProductos"
        app:layout_constraintTop_toBottomOf="@+id/cvReporteProductos"
        app:layout_constraintVertical_bias="0.11">
        <ImageView
            android:id="@+id/imgModificarProveedores"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/modificar_proveedores" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Modificar Proveedores"
            />

        <Button
            android:id="@+id/btnModificarProveedores"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvModificarProductos"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toEndOf="@+id/cvActualizarStockProductos"
        app:layout_constraintTop_toBottomOf="@+id/cvConsultarStockProductos"
        app:layout_constraintVertical_bias="0.11">
        <ImageView
            android:id="@+id/imgModificarProductos"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/editar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Modificar productos"
            />

        <Button
            android:id="@+id/btnModificarProductos"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvActualizarStockProductos"
        android:layout_width="105dp"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvBuscarProductos"
        app:layout_constraintVertical_bias="0.11">
        <ImageView
            android:id="@+id/imgActualizarStockProductos"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            app:srcCompat="@drawable/actualizar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:layout_gravity="center|center_horizontal"
            android:text="Actualizar Stock de productos"
            />
        <Button
            android:id="@+id/btnActualizarStockProductos"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="@color/primary_mass"
            android:text="Registrar"
            android:textColor="@color/white"
            android:textSize="9dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>